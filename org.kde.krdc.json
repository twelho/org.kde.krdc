{
    "id": "org.kde.krdc",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-23.08",
    "sdk": "org.kde.Sdk",
    "command": "krdc",
    "rename-icon": "krdc",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/*.a",
        "/lib/*.la",
        "/share/man"
    ],
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=network",
        "--device=dri",
        "--socket=pulseaudio",
        "--talk-name=org.kde.kwalletd5"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "add-ld-path": ".",
            "version": "23.08",
            "autodownload": true
        }
    },
    "cleanup-commands": [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ],
    "modules": [
        "shared-modules/libusb/libusb.json",
        {
            "name": "libssh",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DWITH_DEBUG_CALLTRACE:BOOL=OFF",
                "-DWITH_EXAMPLES:BOOL=OFF",
                "-DWITH_SERVER:BOOL=OFF"
            ],
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.libssh.org/files/0.10/libssh-0.10.5.tar.xz",
                    "sha256": "b60e2ff7f367b9eee2b5634d3a63303ddfede0e6a18dfca88c44a8770e7e4234",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1729,
                        "stable-only": true,
                        "url-template": "https://www.libssh.org/files/$major.$minor/libssh-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "libvncserver",
